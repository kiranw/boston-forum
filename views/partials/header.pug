.navbar.navbar-light.fixed-top.navbar-expand-lg
  .container
    a.navbar-brand(href='/')
      img.navbar-logo(src="/img/logo.png")
      | Assembly
    button.navbar-toggler(type='button', data-toggle='collapse', data-target='.navbar-collapse')
      span.sr-only Toggle navigation
      span.navbar-toggler-icon
    .collapse.navbar-collapse
      ul.nav.navbar-nav
        li.nav-item(class=(title === 'Home') ? 'active' : undefined)
          a.nav-link(href='/') Home
        li.nav-item(class=(title === 'About') ? 'active' : undefined)
          a.nav-link(href='/about') About
        li.nav-item(class=(title === 'Topics') ? 'active' : undefined)
          a.nav-link(href="/tags/all-tags") Topics
        if (iscouncilor && user)
          li.nav-item(class=(title === 'New Notice') ? 'active' : undefined)
            a.nav-link(href='/meetings/new-meeting') 
              i.fas.fa-plus-circle
              span New Notice
        li.nav-item(class=(title === 'Live Meetings') ? 'active' : undefined)
          a.nav-link(href='/meetings/live-meetings') Live Sessions
        li.nav-item(class=(title === 'Open Comments') ? 'active' : undefined)
          a.nav-link(href='/meetings/open-comments') Open Comment  
        li.nav-item(class=(title === 'Public Notices') ? 'active' : undefined)
          a.nav-link(href='/meetings/public-notices') Public Notices          
      ul.nav.navbar-nav.ml-auto
        if !user
          li.nav-item(class=(title === 'Login') ? 'active' : undefined)
            a.nav-link(href='/login') Login
          li.nav-item(class=(title === 'Create Account') ? 'active' : undefined)
            a.nav-link(href='/signup') Create Account
        else
          li.dropdown(class=(title === 'Account Management') ? 'active' : undefined).nav-item
            a.dropdown-toggle.nav-link(href='#', data-toggle='dropdown')
              if user.profile.picture
                img(src=user.profile.picture)
              else
                img(src=user.gravatar(60))
              span= user.profile.name || user.email || user.id
              i.caret
            ul.dropdown-menu
              li.dropdown-item
                a(href='/account/subscriptions') Issues I'm Following
              li.divider
              li.dropdown-item
                a(href='/account') My Account
              li.divider
              li.dropdown-item
                a(href='/logout') Logout
